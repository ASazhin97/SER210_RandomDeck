<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rowCount="3"
    android:columnCount="1"
    tools:context="com.ser210_02_asazhin.ser210_randomdeck.DeckListActivity">

    <TextView
        android:id="@+id/DeckListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Wait Generating"
        android:layout_column="0"
        android:layout_row="0" />

    <ListView
        android:id="@+id/deckListView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
    />

    <Button
        android:id="@+id/newDeckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="New Deck"
        android:layout_column="0"
        android:layout_row="2"/>

</GridLayout>
